{
  "framework": "nextjs",
  "buildCommand": "npm ci && npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm ci",
  "devCommand": "npm run dev",
  "env": {
    "SKIP_ENV_VALIDATION": "true",
    "NODE_ENV": "production",
    "TAILWIND_CSS_ENGINE": "stable"
  },
  "build": {
    "env": {
      "SKIP_ENV_VALIDATION": "true",
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "app/**/*.{js,ts,jsx,tsx}": {
      "maxDuration": 30
    }
  }
}